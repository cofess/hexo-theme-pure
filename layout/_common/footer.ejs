<div class="footer">
	<% if(theme.customize.social_links) { %>
	<% var tooltipClass = theme.customize.social_link_tooltip === false ? '' : 'data-toggle=tooltip data-placement=top'; %>
    <ul class="social-links">
    	<% for(var i in theme.customize.social_links) { %>
        <li><a href="<%- url_for(theme.customize.social_links[i]) %>" target="_blank" title="<%= i %>" <%= tooltipClass %>><i class="fa fa-<%= i %>"></i></a></li>
        <% } %>
    </ul>
    <% } %>
    <div class="copyright">
        &copy; <%= date(new Date(), 'YYYY') %> <%= config.author || config.title %>
        <div class="publishby">
        	<!-- <%= __('powered_by') %> <a href="http://hexo.io/" target="_blank">Hexo</a>. -->
        	<%= __('theme_by') %> <a href="https://github.com/cofess" target="_blank"> cofess </a>base on <a href="https://github.com/cofess/hexo-theme-pure" target="_blank">pure</a>.
        </div>
    </div>
</div>